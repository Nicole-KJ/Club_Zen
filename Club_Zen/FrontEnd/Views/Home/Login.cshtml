
@model FrontEnd.Models.UsuarioAViewModel

@{
    ViewData["Title"] = "Login";

}
<script>
    document.getElementById("navbar").style.visibility = 'hidden';
    document.getElementById("login").style.visibility = 'hidden';
    //document.getElementById('logo').style.pointerEvents = 'none';
</script>


<h1>Inicio de sesion</h1>
<hr />
<div class="row justify-content-center mt-4">
    <div class="col-md-4">
        <form asp-action="Index">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UserName" class="control-label">Nombre de usuario</label>
                <input asp-for="UserName" class="zen-input mt-2 w-100" placeholder="Ingrese su usuario" required />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="Email" class="control-label">Correo electronico</label>
                <input asp-for="Email" class="zen-input mt-2 w-100" placeholder="Ingrese su correo electrónico" required />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="Password" class="control-label mt-2">Contraseña</label>
                <input asp-for="Password" class="zen-input mt-2 w-100" placeholder="Digite su contraseña" required />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group mt-4">
                <input type="submit" value="Iniciar Sesión" class="variant-primary w-100" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
