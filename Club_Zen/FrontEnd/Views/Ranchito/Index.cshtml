@model IEnumerable<FrontEnd.Models.RanchitoViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Ranchitos</h1>

<p>
    <a asp-action="Create">Crear</a>
</p>
<table  style="color:white" class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdRanchito)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Desc)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model == null)
        {
      <tr>
           <td colspan="3" style="text-align: center;">No hay mesas registradas</td>
      </tr>
        }
        else
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdRanchito)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Desc)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.IdRanchito }) |
                        @Html.ActionLink("Details", "Details", new { id = item.IdRanchito }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.IdRanchito })
                    </td>
                </tr>
            }
        }

    </tbody>
</table>
