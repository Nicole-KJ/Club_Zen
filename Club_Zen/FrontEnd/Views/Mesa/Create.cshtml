@model FrontEnd.Models.MesaViewModel

@{
    ViewData["Title"] = "Crear Mesa";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Crear mesa</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Cantidad" class="control-label"></label>
                <input asp-for="Cantidad" class="zen-input mt-2 w-100" placeholder="Digite la cantidad de personas" />
                <span asp-validation-for="Cantidad" class="text-danger"></span>
            </div>
            <div class="form-group mt-4">
                <input type="submit" value="Create" class="variant-primary w-100" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
